<% provide(:title, current_user.username) %> <div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= current_user.username %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user.thoughts.any? %>
    <h3>Thoughts (<%= current_user.thoughts.count %>)</h3>
    <ol class="thoughts">
      <%= render @thoughts %> </ol>
    <%= will_paginate @thoughts %> <% end %>
  </div>
</div>

